post_install() {
	EXTRAMODULES='extramodules-3.4-ck'
	depmod $(cat /lib/modules/$EXTRAMODULES/version)
	echo
	echo 'For more information on this driver, see:'
	echo 'http://wiki.archlinux.org/index.php/Broadcom_BCM4312'
}

post_upgrade() {
	EXTRAMODULES='extramodules-3.4-ck'
	depmod $(cat /lib/modules/$EXTRAMODULES/version)
}
