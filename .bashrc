#--------alias--------
alias restartx='sudo /etc/init.d/lightdm restart'
alias gedit='sudo gedit'
#apt-get & aptitude
alias a-i='sudo apt-get install'
alias a-p='sudo apt-get purge'
alias a-s='sudo apt-get search'
alias a-u='sudo apt-get update'

#proxy
alias goaproxy='`nohup python ~/soft/goagent-1.7.9/local/proxy.py&`'

#color
alias ls='ls --color=auto'
alias grep='grep --color=auto'

#github
alias git-c='git commit -a -m'
alias git-p='git push'
alias git-a='git add .'

#PATH
export PATH=$PATH:$HOME/works/shells


