pkgname=openkeeper-cli
pkgver=1.1
pkgrel=1
license=('GPL')
pkgdesc="fuck you netkeeper"
arch=('x86_64')
depends=('rp-pppoe')
source=('openkeeper-cli-1.1-x86_64.tar.gz')
md5sums=('474bba84971c6a39b12122598bdc09b7')
build(){
    cd "${srcdir}/${pkgname}-${pkgver}-${arch}"
    cd diallinux_v1.0_src_a/
    make
}
package() {
    cd "${srcdir}/${pkgname}-${pkgver}-${arch}"
    find . -maxdepth 1 -type f -exec install -Dm755 "{}" "$pkgdir/usr/local/openkeeper/{}" \;
    install -D -m755 ok $pkgdir/usr/bin/ok
    install -D -m755 ok-stop $pkgdir/usr/bin/ok-stop
    install -D -m755 ok-config $pkgdir/usr/bin/ok-config
}
